<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="30dp">
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:layout_marginLeft="20dp">
        <LinearLayout
            android:id="@+id/l1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <ImageButton
            android:id="@+id/upvoteBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/upvote"
            android:background="#00FFFFFF"
            android:layout_marginLeft="8dp"
            android:layout_marginTop = "12dp"
            android:layout_marginBottom="8dp" />
            <ImageButton
                android:id="@+id/upvoteBtnInactive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/upvote_inactive"
                android:background="#00FFFFFF"
                android:layout_marginLeft="8dp"
                android:layout_marginTop = "12dp"
                android:layout_marginBottom="8dp"
                android:visibility="gone"/>
        <TextView
            android:id="@+id/voteCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/upvoteBtn"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:text="22"
            android:textSize="16sp"/>
        <ImageButton
            android:id="@+id/downVoteBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/downvote"
            android:background="#00FFFFFF"
            android:layout_marginLeft="8dp"
            android:layout_margin="8dp"
            android:layout_below="@id/voteCount"/>
            <ImageButton
                android:id="@+id/downVoteBtnInactive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/downvote_inactive"
                android:background="#00FFFFFF"
                android:layout_marginLeft="8dp"
                android:layout_margin="8dp"
                android:layout_below="@id/voteCount"
                android:visibility="gone"/>
        </LinearLayout>
        <TextView
            android:id="@+id/NameField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="Name"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_toRightOf="@id/l1"/>
        <TextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="Date"
            android:layout_below="@id/NameField"
            android:textSize="12sp"
            android:layout_toRightOf="@id/l1"/>

        <TextView
            android:id="@+id/comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Comment"
            android:textSize="14sp"
            android:layout_below="@id/date"
            android:layout_toRightOf="@id/l1"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>